<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- Mirror tanımı: Central repository'yi kullan -->
  <mirrors>
    <mirror>
      <id>central</id>
      <mirrorOf>central</mirrorOf>
      <url>https://repo1.maven.org/maven2</url>
    </mirror>
  </mirrors>

  <!-- Ağ bağlantı zaman aşımı değerleri -->
  <profiles>
    <profile>
      <id>increase-timeout</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <http.socket.timeout>60000</http.socket.timeout>
        <http.connection.timeout>60000</http.connection.timeout>
      </properties>
    </profile>
  </profiles>

  <!-- Local repository (isteğe bağlı, default ~/.m2/repository) -->
  <localRepository>${user.home}/.m2/repository</localRepository>

  <!-- Gereksiz HTTP bağlantılarını engelle -->
  <interactiveMode>true</interactiveMode>
  <offline>false</offline>
</settings>
